<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="back">
        <h2>ステータス</h2>
        <%= image_tag user.get_profile_image(100,100),class:"profile" %>
        <table class="status">
          <tbody>
            <tr>
              <th>名前:</th>
              <th><%= user.name %></br></th>
            </tr>
            <tr>
              <th class="introduction">自己紹介:</th>
              <th><div class="introduction"><%= user.introduction %></div></th>
            </tr>
          </tbody>
        </table>
        <div class="row ">
          <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block " do %>
            <i class="fa-solid fa-user-gear"></i>
          <%end%>
        </div>
        <h2 class="mt-3">冒険の記録</h2>
        <%= form_with model: post_datum  do |f| %>
          <div class="adventuredata">
            <div class="form-group">
              <label for="inputImage">画像</label><br />
              <%= f.file_field :image, placeholder: "投稿画像", accept: "image/*" %>
            </div>


            <div class="form-group">
              <label>タイトル</label>
              <%= f.text_field :title,class:"form-control post_title" %>
            </div>
            <div class="form-group mb-3">
              <label>感想</label>
              <%= f.text_area :body,class:"form-control post_body" %>
            </div>
          </div>
            <%= f.submit 'セーブする',class:"btn btn-success" %>
        <% end %>
      </div>
    </div>

<%= flash[:notice] %>

<%= render 'public/users/userprofile',user:current_user, post:Post.new %>

<div class="col-md-7 offset-md-2">
  <h2>冒険者たちの記録</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>感想</th>
            <th class="col-3"></th>
          </tr>
        </thead>


        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= image_tag post.get_image(80,80) %>
                <%end%>
              </td>
              <td>
                <%= link_to post_path(post.id) do %>
                  <div style="width:150px; word-wrap: break-word;"><%= post.title %></div>
                <%end%>
              </td>
              <td class="introductionbody">
                <div style="width:280px; word-wrap: break-word;"><%= post.body %></div>
              </td>
            </tr>
          <%end%>
           
        </tbody>
      </table>
    </div>
  </div>
</div>
